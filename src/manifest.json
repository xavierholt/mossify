{
  "manifest_version": 2,
  "name": "Mossify",
  "version": "0.1",

  "author":       "Kevin Burk",
  "description":  "UI enhancements for the Moss plagiarism detector.",
  "homepage_url": "https://github.com/xavierholt/mossify",

  "icons": {
    "48":  "img/logo-48.png",
    "96":  "img/logo-96.png",
    "128": "img/logo-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://moss.stanford.edu/results/*/"],
      "js":      ["mossify-graph.js", "mossify.js"],
      "css":     ["mossify.css"]
    }
  ]
}
